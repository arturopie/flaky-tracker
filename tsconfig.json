{
  "compilerOptions": {
    "declaration": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
